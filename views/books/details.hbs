<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-2">
      <img src="{{ book.thumbnailUrl }}" class="card-img" alt="{{ book.title }}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ book.title }}</h5>
        <p class="card-text">{{ book.description.long }}</p>
        <p class="card-text">
          <small class="text-muted">
          {{#each book.authors as |author|}}
            {{ author }}
          {{/each}}
          </small>
        </p>
      </div>
    </div>
  </div>
</div>